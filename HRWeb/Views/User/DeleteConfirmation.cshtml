@model string

<h3>Are you sure you want to delete this user?</h3>

<form asp-action="Delete" asp-route-userId="@Model" method="post" class="d-inline-block">
    <input type="hidden" name="confirmed" value="true" />
    <button type="submit" class="btn btn-danger">Delete</button>
</form>

<a asp-action="GetAllUsers" class="btn btn-default d-inline-block ml-2">Cancel</a>