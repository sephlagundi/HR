@{

}




<div class="text-center">
    <h1 class="display-4">Employees</h1>
</div>

<p>
    <a class="btn btn-info" asp-action="Create">Add New Employee</a>
</p>

@if (TempData["AlertMessage"] != null)
{
    <div class="alert alert-success">
        <strong>Success!</strong> @TempData["AlertMessage"]
    </div>
}

<table class="table">
    <thead class="thead-dark">
        <tr>
            @*<th scope="col">#</th>*@
            <th scope="col">Full Name</th>
@*            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>*@
            <th scope="col">Email</th>
            <th scope="col">Date Of Birth</th>
            <th scope="col">Phone</th>
@*            <th scope="col">Roles</th>*@
            <th scope="col">Departments</th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Where(u => u.roleName != "Administrator"))
        {
            <tr>
                @*<th scope="row">@user.userId</th>*@
                <td>@string.Format("{0} {1}", user.FirstName, user.LastName)</td>
@*                <td>@user.FirstName</td>
                <td>@user.LastName</td>*@
                <td>@user.Email</td>
                <td>@user.DOB.ToString("d")</td>
                <td>@user.Phone</td>
@*                <td>@user.roleName</td>*@
                <td>@user.DepartmentName</td>
                <td></td>


                <td>
                    
                    <a class="btn btn-outline-dark asp-controller="User" asp-action="Update" asp-route-userId="@user.userId">Edit</a> |
                    <a class="btn btn-outline-danger" asp-controller="User" asp-action="Delete" asp-route-userId="@user.userId">Delete</a>

                    
                </td>
@*
                <td><a asp-controller="User" asp-action="Details" asp-route-userId="@user.userId">View</a></td>
                <td><a asp-controller="User" asp-action="Update" asp-route-userId="@user.userId">Edit</a></td>
                <td><a asp-controller="User" asp-action="Delete" asp-route-userId="@user.userId">Delete</a></td>*@
            </tr>
        }
    </tbody>
</table>