@{
}

<H1>Users</H1>

<a class ="btn btn-info" asp-action="Create" asp-controller="User">Add New User</a>

<table class="table"
    <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Email</th>
            <th scope="col">Roles</th>
            <th scope="col"></th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>


        @foreach (var user in Model)
        {
            <tr>
                <th scope="row">@user.userId</th>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>@user.roleName</td>
                <td></td>
                    <td><a class ="btn btn-info" asp-controller="User" asp-action="Details" asp-route-userId="@user.userId">View</a></td>
                    <td><a class="btn btn-info" asp-controller="User" asp-action="Update" asp-route-userId="@user.userId">Edit</a></td>
                    <td><a class="btn btn-info" asp-controller="User" asp-action="Delete" asp-route-userId="@user.userId">Delete</a></td>
            </tr>
        }
    </tbody>
</table>